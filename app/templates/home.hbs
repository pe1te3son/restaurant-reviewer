<div class="mdl-grid grid-handle" id="venues">

{{log restaurants}}

 {{#each restaurants as |venue|}}
   <div class="mdl-cell mdl-cell--4-col mdl-card mdl-shadow--2dp restaurant-thumb">
    <div class="mdl-card__title">
      <h2 class="mdl-card__title-text">{{venue.response.venue.name}}</h2>
    </div>
    <div class="mdl-card__supporting-text">
      Lorem ipsum dolor sit amet, consectetur adipiscing elit.
      Mauris sagittis pellentesque lacus eleifend lacinia...
    </div>
    <div class="mdl-card__actions mdl-card--border card-action">
      <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
        Show Restaurant
      </a>
    </div>
    <div class="mdl-card__menu">
      <button class="mdl-button mdl-button--icon mdl-js-button mdl-js-ripple-effect">
        <i class="material-icons">share</i>
      </button>
    </div>
  </div>
 {{/each}}


</div>
