<div class="mdl-card__title">
  <h2 class="mdl-card__title-text comment-head">Comments</h2>
</div>
<div class="mdl-card__supporting-text">

  <ul class="list--unstyled">
    {{log comments}}
    {{#each (slice-array comments 5) as |comment|}}
    <li class="comment-item">

      <div class="row">
        <div class="user-img inline-block">
          <img src="{{comment.user.photo.prefix}}50x50{{comment.user.photo.suffix}}" alt="Picture of {{user.firstName}}" />
        </div>
        <div class="comment-user-name inline-block">
          <span>{{comment.user.firstName}}</span>&nbsp;<span>{{comment.user.lastName}}</span>
        </div>
      </div>

      <div class="comment-text">
        <p>{{comment.text}}</p>
      </div>


    </li>
    {{/each}}
  </ul>

</div>
<div class="mdl-card__actions mdl-card--border">
  <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
    More comments
  </a>
</div>
